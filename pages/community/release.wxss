/* 箭头 */
.arrow-box{
  width:30rpx;
  height:30rpx;
  margin:0 auto;
  position:relative;
}
/*上箭头*/
.top{
    position:absolute;
    left:0;
    top:-15rpx;
    z-index: 2;/*兼容ie8-*/
    border:1rpx solid transparent;
}
.top-arrow1,.top-arrow2{
    width:0;
    height:0;
    display:block;
    position:absolute;
    left:0;
    top:0;
    z-index: 5;/*兼容ie8-*/
    border-top:20rpx transparent dashed;
    border-left:20rpx transparent dashed;
    border-right:20rpx transparent dashed;
    border-bottom:20rpx white solid;
    overflow:hidden;
}
.top-arrow1{
    border-bottom:20rpx #666 solid;
}
.top-arrow2{
    top:1px;/*重要*/
    border-bottom:20rpx white solid;
}
/*下箭头*/
.bottom{
    width:0;
    height:0;
    position:absolute;
    left:0;
    top:0;
    z-index: 2;/*兼容ie8-*/
    border:1rpx solid transparent;
}
.bottom-arrow1,.bottom-arrow2{
    width:0;
    height:0;
    display:block;
    position:absolute;
    left:0;
    top:0;
    z-index: 5;/*兼容ie8-*/
    border-bottom:20rpx transparent dashed;
    border-left:20rpx transparent dashed;
    border-right:20rpx transparent dashed;
    border-top:20rpx white solid;
    overflow:hidden;
}
.bottom-arrow1{
    top:1px;/*重要*/
    border-top:20rpx #666 solid;
}
.bottom-arrow2{
    border-top:20rpx white solid;
}

