/* pages/live/index.wxss */
.listbox{padding: 30rpx;}
.list{width: 330rpx;margin-bottom: 30rpx;position: relative;border-radius: 8rpx;overflow: hidden;}
.list image{display: block;}
.list .info{position: absolute;top: 0;left: 0;right: 0;bottom: 0;}
.info .state{padding: 20rpx;}
.info .state>view{background:rgba(0, 0, 0,0.5);display: inline-block;font-size: 24rpx;color: #fff;border-radius: 6rpx;padding: 5rpx 10rpx;}
.info .state .zbz{background: #FD93B3;}
.info .ibottom{padding: 20rpx;background-image: linear-gradient(rgba(0, 0, 0,0.1), rgba(0, 0, 0,0.7));color: #fff;}

.live{position: absolute;top: 0;left: 0;right: 0;bottom: 0;background: #000;}

