/* pages/personal/add_address.wxss */
page{background:#F5F5F5;}
.list{height:120rpx;position:relative;padding-left:24rpx;background: #fff;}
.list:after{position:absolute;right:0;bottom:0;left:0;height:2rpx;content:'';-webkit-transform: scaleY(.5);transform: scaleY(.5);background-color:#E4E4E4;}
.list .biaoti{font-size:30rpx;color:#4A4A4A;width:170rpx;}
.list .rightnr{flex-grow:1;height:100%;padding-right:20rpx;}
.list .rightnr input,.list .rightnr .weui-input{width:100%;height:100%;color:#808080;}
.listr:after{height:0;}
.list .mrdzbj{width:76rpx;height:40rpx;background:#E2E2E2;border-radius:20rpx;margin-right:26rpx;}
.list .mrdzbj text{display:inline-block;height:40rpx;width:40rpx;background:#fff;border-radius:20rpx;
-webkit-transition:margin-left 0.1s ease-in-out;-moz-transition:margin-left 0.1s ease-in-out;transition:margin-left 0.1s ease-in-out;}
.list .mrdzbj.active{background:#FAA7B7;}
.list .mrdzbj.active text{margin-left:36rpx;}

.dibuan{position:fixed;top:auto;right:0;bottom:0;left:0;}
.dibuan_nr{height:94rpx;background:#CECECE;}
.dibuan_nr text{width:50%;height:94rpx;color:#fff;font-size:30rpx;font-weight:500;}
.dibuan_nr .baoc{background:#FAA7B7;}


.Area_window{position:fixed;background:rgba(0, 0, 0, 0.5);top:0;right:0;bottom:0;left:0;z-index:10;}
.Area_window .qxscan{background:#fff;border-bottom:1rpx solid #ddd;padding:20rpx 30rpx;font-size:34rpx;}
.Area_window .qxscan .qdcocor{color:#5AC459}
.Area_window picker-view{background:#fff;}
.Area_window picker-view picker-view-column {text-align:center}