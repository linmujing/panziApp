/* pages/personal/task_center.wxss */
.top{background: #F6AFC1;color: #fff;padding: 10rpx 20rpx 100rpx 20rpx;border-radius: 0 0 60rpx 60rpx;}
.top .qd .btn{border: 1rpx solid #fff;border-radius: 50rpx;padding: 16rpx 0;width: 210rpx;margin: 0 auto;}
.top .qd image{width: 36rpx;}
.top .qd text{font-size: 34rpx;}

/* 日历 */
.date{position: absolute;top: 200rpx;width:100%;margin: 0 auto;}
.box .dateBox{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  margin: 20rpx 20rpx 0 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #E3E3E3;
  font-size: 30rpx;
}
.box{
  display: flex;
  flex-wrap: wrap;
  margin: 0 auto;
  background: #fff;
  border-radius: 12rpx;
  box-shadow:0px 10rpx 30rpx -5rpx rgba(0,0,0,0.3);
}

.box>view{
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  font-size: 30rpx;
}

.dateOn{
  display: inline-block;
  width: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 50%;
  border: 1rpx solid #F6AFC1;
  box-sizing: border-box;
}