.service_an {position: fixed;top: auto;left: auto;right: 0;bottom: 280rpx;width:120rpx;color: #fff;z-index: 99}

.notes{position:fixed;background:rgba(0,0,0,0.7);top:0;right:0;left:0;bottom:0;z-index: 101;}
.notes .cont{background: #fff;width: 520rpx;margin: 0 auto;border-radius: 16rpx;margin-top: 10%;overflow: hidden;}
.notes .cont .head{background: #FAA4AD;color: #fff;padding: 20rpx;}
.notes .cont .body{padding: 30rpx;height: 500rpx;overflow-y: scroll;}