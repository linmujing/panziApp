/* pages/index/store_detail.wxss */
.box{background: #fff;padding: 10rpx;overflow: hidden;}
.blod{font-weight: bold}
.ta_c{color: #515151;}
.cont{text-align: justify;}

.line{margin: 30rpx 0;font-size: 16rpx;color: #575757;}
.line .d{width: 230rpx;border-bottom: 1rpx solid #A1A1A1;}
.lines{margin: 40rpx 0;}
.lines .d{width: 250rpx;border-bottom: 1rpx solid #A1A1A1;}

.topic{text-align: center}
.title {
  text-align: center;
  padding: 20rpx;
}

.title view:first-child {
  font-weight: bold;
  font-size: 46rpx;
}

.title view:last-child {
  font-size: 16rpx;
  margin-top: 10rpx;
  color: #5A5A5A;
}
.triangle {
  display: inline-block;
  width: 0;
  height: 0;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-top: 10rpx solid #FC90A4;
  margin-top: 20rpx
}
.gift{text-align: center;padding: 60rpx 30rpx;overflow: hidden;}
.gift input{border: 1rpx solid #B4B4B4;padding: 10rpx;text-align: left;}
.gift .btn_title{border-radius: 6rpx;margin-top: 40rpx;line-height: 70rpx;}
.gift .ta_c{margin-top: 60rpx;}
.gift .blod{font-size: 60rpx;}

.video-box{ width:  100%; height: 400rpx;}
video{ width:  100%;height:  100%;}