/* pages/index/photos_list.wxss */
.list{background: #fff;margin-top: 10rpx;}
.list .name{padding: 20rpx 0 0 30rpx;}
.list .order{padding: 20rpx 30rpx;}
.list .state{border-top: 1rpx solid #E9E9E9;margin: 0 30rpx;padding: 20rpx 0;}
.list .line{width: 90rpx;position: relative;top: 31rpx;border-top: 4rpx dashed #D0D0D0;}
.list .line2{width: 90rpx;position: relative;top: 31rpx;border-top: 4rpx solid #F6AFC1;}
.txt{margin-top: 10rpx;font-size: 26rpx;}
.color_dd{color: #D0D0D0;}

.popup{position: fixed;top: 0;width: 100%;height: 100%;z-index: 11;background: rgba(0,0,0,0.6);}
.popup .box{margin: 40rpx auto;width: 90%;padding: 60rpx 40rpx;text-align: center;background: #fff;border-radius: 10rpx;box-sizing: border-box;}
.popup .box>.color_title{font-size: 40rpx;}
.popup .box .btn{margin-top: 20rpx;font-size: 32rpx;line-height: 70rpx;}
.popup .box .btn view{width: 500rpx;display: inline-block;}

.star{width: 54rpx;height: 54rpx;margin-right: 10rpx;}
.star2{width: 40rpx;height: 40rpx;margin-right: 10rpx;}
.textarea{background: #EFEFEF;border-radius: 8rpx;padding: 20rpx;height: 100rpx;text-align: left;box-sizing: border-box;margin-top: 10rpx;width: 600rpx;}