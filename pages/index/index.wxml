<view class='carouse2'>
  <swiper autoplay indicatorDots circular interval='5000' indicator-active-color='#fff'>
    <view wx:for="{{carouselData}}" wx:key='{{index}}'>
      <swiper-item>
        <image src="{{item.img}}" class='w100 h100'/>
      </swiper-item>
    </view>
  </swiper>
</view>
<!-- 导航 -->
<view class='nav df jc_sb fw_w bg_ff'>
  <block wx:for='{{navData}}' wx:key='{{index}}'>
    <view class='w20 mt_10' bindtap='click_nav' data-index='{{index}}' data-title='{{item.title}}'>
      <image src='{{item.title_img}}'></image>
      <view class='ft_12 mt_5'>{{item.title}}</view>
    </view>
  </block>
</view>
<!-- 热门主题 -->
<view>
  <view class='title bg_ff'>
    <view>热门主题</view>
    <view>THE LATEST TOPIC</view>
  </view>
  <view class='hot_topic df jc_sb fw_w'>
    <view wx:for='{{hotList}}' wx:key='{{index}}' class='item' bindtap='click_theme' data-id='{{item.id}}'>
      <view class='imgb'>
        <image mode='widthFix' src="{{item.fm_img}}" class='w100'/>
      </view>
      <view class='txt df jc_sb ai_c'>
        <view class='oneline'>{{item.title}}</view>
        <image mode='widthFix' src='/img/right_arrow.png' class='icon'></image>
      </view>
    </view>
  </view>
</view>
<!-- 视频 -->
<view class='video_box'>
  <view class='vlist' wx:for='{{videoData.list}}' wx:key='{{index}}'>
    <view class='block'>
      <view class='ta_c'>
        <view class='ft_16'>{{item.title}}</view>
        <!-- <view class='ft_12 mt_10'>| {{item.info}} |</view> -->
        <!-- <view class='arrow'></view> -->
      </view>
      <view id="{{index}}" class="cover" style="display: {{ _index == index ? 'none' : 'block' }};" bindtap="videoPlay">
        <!-- 视频图层 -->
        <image class="videoVideo2" src="{{item.img}}" mode="scaleToFill">
          <!-- 视频按钮 -->
          <image class="videoPlay" src="/img/play.png" mode="scaleToFill"></image>
        </image>
      </view>
    </view>
    <!-- 视频 -->
    <video src="{{item.url}}" id="{{index}}" class='video' wx:if="{{_index == index}}"></video>
  </view>
</view>
<!-- 明星体验师 -->
<view>
  <view class='ta_c mt_20 '>
    <image mode='widthFix' src='{{experience}}' class='w60'></image>
  </view>
  <view class='experiencer df jc_sb fw_w'>
    <view wx:for='{{starList}}' wx:key='{{index}}' class='item' bindtap='click_star' data-id='{{item.id}}'>
      <view class='imgb'>
        <image mode='widthFix' src="{{item.fm_img}}" class='w100'/>
      </view>
      <view class='txt'>
        <view class='oneline'>
          <text>{{item.title}} | </text>
          <text> 【{{item.name}}】</text>
        </view>
        <image mode='widthFix' src='/img/right_arrow.png' class='icon'></image>
      </view>
    </view>
  </view>
</view>
<!-- 每周客片 -->
<view>
  <view class='title'>
    <view>每周客片</view>
    <view>GUEST SHEET EVERY WEEK</view>
  </view>
  <view class='week df jc_sb fw_w'>
    <view wx:for='{{weekData.weekList}}' wx:key='{{index}}' class='item' bindtap='click_kepian' data-id='{{item.id}}'>
      <view class='imgb'>
        <image mode='widthFix' src="{{item.fm_img}}" class='w100'/>
      </view>
      <view class='txt ta_c'>
        <image mode='widthFix' src='{{weekData.week_logo}}'></image>
      </view>
    </view>
  </view>
</view>
