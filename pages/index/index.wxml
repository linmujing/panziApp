<!--index.wxml-->
<view class='search_box df jc_sb ai_c bg_ff'>
  <view class='search df ai_c'>
    <image src='/img/search.png'></image>
    <input placeholder="搜索主题风格 最新主题" placeholder-style='color: #B4B4B4' bindinput="blur_search"/>
  </view>
  <!-- <view class='shop'>
    <image src='/img/shopping.png'></image>
    <view class='point'>3</view>
  </view> -->
  <view class='shop' bindtap='click_msg'>
    <image src='/img/message.png'></image>
    <view class='point'>1</view>
  </view>
</view>
<!-- 轮播 -->
<view class='carouse bg_ff ta_c'>
  <swiper autoplay indicatorDots circular interval='3000' indicator-active-color='#fff' previous-margin='80rpx' next-margin='80rpx' bindchange='change' current='{{current}}'>
    <view wx:for="{{carouselData}}" wx:key='{{index}}'>
      <swiper-item class=' df ai_c'>
        <view class='box' animation="{{index == current?animationData:animationData2}}">
          <image src="{{item.img}}" class='w100 h100'/>
        </view>
      </swiper-item>
    </view>
  </swiper>
</view>
<!-- 导航 -->
<view class='nav df jc_sb fw_w bg_ff'>
  <block wx:for='{{navData}}' wx:key='{{index}}'>
    <view class='w20 mt_10' bindtap='click_nav' data-index='{{index}}' data-title='{{item.title}}'>
      <image src='{{item.title_img}}'></image>
      <view class='ft_12 mt_5'>{{item.title}}</view>
    </view>
  </block>
</view>
<!-- 热门主题 -->
<view>
  <view class='title bg_ff'>
    <view>热门主题</view>
    <view>THE LATEST TOPIC</view>
  </view>
  <view class='hot_topic df jc_sb fw_w'>
    <view wx:for='{{hotList}}' wx:key='{{index}}' class='item' bindtap='click_theme' data-id='{{item.id}}'>
      <image src="{{item.img}}" />
      <view class='txt df jc_sb ai_c'>
        <view>
          <text>{{item.xilie}} | </text>
          <text>{{item.title}}</text>
        </view>
        <image src='/img/right_arrow.png' class='icon'></image>
      </view>
    </view>
  </view>
</view>
<!-- 视频 -->
<view class='video_box'>
  <video id='myVideo' src='{{videoData.url}}' poster='{{videoData.img}}' objectFit='fill'></video>
</view>
<!-- 明星体验师 -->
<view>
  <view class='ta_c mt_20 '>
    <image mode='widthFix' src='{{experience}}' class='w60'></image>
  </view>
  <view class='experiencer df jc_sb fw_w'>
    <view wx:for='{{hotList}}' wx:key='{{index}}' class='item'>
      <image src="{{item.img}}" />
      <view class='txt ta_c'>
        <view>
          <text>{{item.xilie}} | </text>
          <text>{{item.title}}</text>
        </view>
        <image src='/img/right_arrow.png' class='icon'></image>
      </view>
    </view>
  </view>
</view>
<!-- 每周客片 -->
<view>
  <view class='title'>
    <view>每周客片</view>
    <view>GUEST SHEET EVERY WEEK</view>
  </view>
  <view class='week df jc_sb fw_w'>
    <view wx:for='{{weekData.weekList}}' wx:key='{{index}}' class='item'>
      <image mode='widthFix' src="{{item.img}}" />
      <view class='txt ta_c'>
        <image mode='widthFix' src='{{weekData.week_logo}}'></image>
      </view>
    </view>
  </view>
</view>
<!-- 全国门店 -->
<view class='store_box'>
  <view class='title'>
    <view>全国门店</view>
    <view>STORE ENVIRONMENT</view>
  </view>
  <view class='w100'>
    <image mode='widthFix' src='{{storeData.banner}}' class='w100'></image>
  </view>
  <view class='store bg_ff'>
    <scroll-view class="df fw_w" scroll-x style="width: auto;overflow:hidden;">
      <view wx:for='{{storeData.storeList}}' wx:key='{{index}}' class='item'>
        <image src="{{item.img}}" />
        <view class='txt ta_c'>{{item.name}}</view>
      </view>
    </scroll-view>
  </view>
</view>
<!-- 客户评价 -->
<view>
  <view class='title'>
    <view>客户评价</view>
    <view>HOT COMMENTS</view>
  </view>
  <view class='comments df jc_sb fw_w'>
    <view wx:for='{{commentsList}}' wx:key='{{index}}' class='item'>
      <image mode='widthFix' src="{{item.img}}" />
      <view class='txt'>
        <view class='twoline'>{{item.info}}</view>
        <view class='df ai_c mt_10'>
          <image src="{{item.img}}"></image>
          <text class='pl_5'>{{item.name}}</text>
        </view>
      </view>
    </view>
  </view>
</view>



<view class='service_an'>
  <button open-type="contact">
    <image mode='widthFix' src='{{service}}'></image>
  </button>
</view>

