/* pages/index/hexiao.wxss */
.container {
    background: #EFEFEF;
    margin: 20rpx 30rpx;
}

.container>view {
    height: 45vh;
    background: #fff;
    border-radius: 8rpx;
    margin-bottom: 30rpx;
    box-shadow: 0 2px 10px 0 #c9c9c9;
    /* box-shadow: 0rpx 0rpx 30rpx -10rpx rgba(0, 0, 0, 0.3); */
    position: relative;
}

.container>view image {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 270rpx;
}

.login {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.3);
}

.login_box {
    background: #FBBECE;
    border-radius: 30rpx;
    position: absolute;
    top: 40%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 560rpx;
    height: 400rpx;
}

.center_wrap {
    position: absolute;
    top: 30rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 80%;
}

.login_title {
    text-align: center;
    color: #fff;
    font-size: 32rpx;
}

.inp_wrap {
    margin-top: 40rpx;
}

.inp_wrap>view {
    display: flex;
    align-items: center;
    margin: 30rpx 0;
    color: #fff;
}

.inp_wrap>view input {
    background: #fff;
    border-radius: 4rpx;
    color: #000;
    margin-left: 10rpx;
    padding-left: 10rpx;
    width: 350rpx;
    height: 65rpx;
}

.login_btn {
    width: 180rpx;
    height: 50rpx;
    background: #F9A4BB;
    color: #fff;
    text-align: center;
    line-height: 50rpx;
    border-radius: 10rpx;
    margin: 40rpx auto 0;
}

.close_btn {
    position: absolute;
    bottom: -120rpx;
    left: 50%;
    transform: translateX(-50%);
}

.close_btn image {
    width: 68rpx;
}