/* pages/index/showcase.wxss */
page{
  background: #fff
}
.title{
  text-align: center;
  margin: 40rpx;
  font-weight: bold;
}
.arrow{
  width: 0;
  height: 0;
  margin-top: 40rpx;
  display: inline-block;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 16rpx solid #ccc;
}
.list{margin: 20rpx;padding: 8rpx;border: 1rpx solid #C8C8C8;}
.list image{width: 100%;}
.list .tip{margin: 20rpx;}
.list .tip image{width: 300rpx;}
.list .imgb{width: 100%;height: 400rpx;overflow: hidden;}
.tip .img{width: 40rpx; height: 40rpx;}

.search_box {
  padding: 20rpx 40rpx;
  line-height: 60rpx;
}

.search_box image {
  width: 40rpx;
  height: 40rpx
}

.search_box .search {
  width: 100%;
  background: #EEEEEE;
  border-radius: 60rpx;
  padding: 10rpx;
  box-sizing:border-box;
}
.banner{padding: 20rpx;}
.banner image{width: 710rpx;border-radius: 8rpx;height: 300rpx;}

.nav{border-bottom: 1px solid #AAAAAA;overflow: hidden;font-size: 30rpx;}
.nav scroll-view{width:100%;white-space: nowrap;}
.nav scroll-view .item{display: inline-block;margin: 0 20rpx;padding: 20rpx 0;font-size: 30rpx;}
.nav scroll-view .active{border-bottom: 3px solid #FA9EB6;font-weight: bold;}