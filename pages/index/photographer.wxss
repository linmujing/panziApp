/* pages/index/photographer.wxss */
.photographer {
    width: 100%;
    overflow-x: hidden;
}

.left_menu {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    width: 180rpx;
    overflow-x: hidden;
    overflow-y: scroll;
    background-color: #f4f4f4;
    z-index: 2;
}

.left_menu .menu_item {
    position: relative;
    background-color: #f4f4f4;
    height: 120rpx;
    line-height: 120rpx;
    text-align: center;
    overflow: hidden;
    width: 100%;
}

.left_menu .menu_item.active {
    color: #1e1e1e;
    font-size: 32rpx;
    font-weight: bold;
    background-color: #ffffff;
}

.left_menu .menu_item.active::before {
    position: absolute;
    content: "";
    display: block;
    width: 10rpx;
    height: 32rpx;
    top: 50%;
    left: 0;
    margin-top: -14rpx;
    background-color: #f59aa3;
}

.right_content {
    position: relative;
    top: 0;
    left: 180rpx;
    padding-left: 20rpx;
    overflow-x: hidden;
    width: calc(100% - 180rpx);
    background: #fff;
}

.right_content .detail {
    padding-top: 20rpx;
}

.right_content .level1 {
    margin-bottom: 40rpx;
}

.right_content .level1 .item_title {
    margin: 10rpx
}

.right_content .level1 .detail_item {
    position: relative;
    background: url("https://vip2.pznrfsy.com/lmj/panziApp/photo-bg.png") center no-repeat;
    background-size: contain;
    width: 529rpx;
    height: 260rpx;
    margin-bottom: 30rpx;
    border-radius: 10rpx;
}

.right_content .level1 .detail_item .content {
    position: absolute;
    top: 60rpx;
    margin-left: 40rpx;
    color: #fff;
}

.right_content .level1 .detail_item .content .name {
    font-size: 38rpx;
}

.right_content .level1 .detail_item .content .line {
    width: 33rpx;
    height: 1px;
    background-color: #ffffff;
    margin-top: 20rpx
}

.right_content .level1 .detail_item .header_img {
    position: absolute;
    top: 30rpx;
    right: 10rpx;
    width: 200rpx;
    border-radius: 50%;
}

.right_content .level1 .detail_item .header_img image {
    width: 200rpx;
    border-radius: 50%;
}