/* pages/index/my_photos.wxss */
page {
  padding-bottom: 100rpx;
}

.movie {
  text-align: center;
  background: #F89FB5;
  color: #fff;
  margin: 40rpx;
  line-height: 90rpx;
  font-size: 36rpx;
  border-radius: 8rpx;
}

#red{
  background: rgba(255, 0, 0, 0.466);
  font-size: 30rpx;
}

.movie .icon {
  border: 1px solid #fff;
  border-radius: 50%;
  width: 28rpx;
  height: 28rpx;
  line-height: 24rpx;
  text-align: center;
  margin-left: 10rpx;
}

/* 瀑布流 */
.container {
  column-count: 2;
  /*设置列数*/
  column-gap: 2rpx;
  padding-left: 12rpx;
}

.container image {
  width: 356rpx;
  margin-top: 12rpx;
  box-shadow: 2px 2px 4px rgba(0, 0, 0, .4);
}

.container .img_box {
  position: relative;
}

.container .check {
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 10rpx;
}

.upload {
  position: fixed;
  bottom: 0;
  width: 100%;
  font-size: 32rpx;
  background: #fff;
  line-height: 100rpx;
  z-index: 10;
}

.upload .ck {
  margin-left: 20rpx;
}

.upload .ck text {
  position: relative;
  top: 5rpx;
}

.upload .btn {
  width: 40%;
  text-align: center;
  background: #F89FB5;
  color: #fff;
}

/* checkbox未选中时样式 */
.container checkbox .wx-checkbox-input {
  border-radius: 20rpx;
  height: 36rpx;
  width: 36rpx;
  margin-top: -18rpx;
  background-color: #fff;
}

/* checkbox选中时样式 */
.container checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  border-radius: 20rpx;
  height: 36rpx;
  width: 36rpx;
  line-height: 36rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
  background-color: #F89FB5;
  border: 1rpx solid #F89FB5;
}

/* 弹窗 */
.preview {
  position: fixed;
  background: rgba(0, 0, 0, 1);
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  z-index: 12;
}

.preview .pre {
  position: absolute;
  top: 0;
  width: 100%;
  overflow-y: scroll;
  padding: 20rpx;
  box-sizing: border-box;
}

.preview .gq {
  position: absolute;
  bottom: 0;
  width: 100%;
  z-index: 13;
}


.popup {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 11;
  background: rgba(0, 0, 0, 0.8);
}

.popup .box {
  margin: 30rpx auto;
  width: 90%;
  padding: 60rpx 40rpx;
  text-align: center;
  background: #fff;
  border-radius: 10rpx;
  box-sizing: border-box;
}

.popup .box>.color_title {
  font-size: 40rpx;
}

.popup .box .btn {
  margin-top: 20rpx;
  font-size: 32rpx;
  line-height: 70rpx;
}

.popup .box .btn view {
  width: 500rpx;
  display: inline-block;
}

.star {
  width: 54rpx;
  height: 54rpx;
  margin-right: 10rpx;
}

.star2 {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.textarea {
  background: #EFEFEF;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
  height: 100rpx;
  text-align: left;
  box-sizing: border-box;
  margin-top: 10rpx;
  width: 600rpx;
}

.title {
  padding: 10rpx;
}

.title view {
  font-size: 32rpx;
  font-weight: bold;
  padding-left: 20rpx;
  border-left: 10rpx solid #F89FB5;
  margin: 10rpx;
}

.video-box {
  width: 100%;
  height: 460rpx;
}

.video-box .num,
.preview .gq .num {
  line-height: 80rpx;
  padding-left: 20rpx;
}

.preview .gq .btn {
  text-align: center;
  color: #fff;
  background: #F89FB5;
  width: 100%;
  line-height: 80rpx;
}

.video-box .btn {
  text-align: center;
  color: #fff;
  background: #F89FB5;
  width: 100%;
  line-height: 80rpx;
}

video {
  width: 100%;
  height: 400rpx;
}

.vimg {
  width: 100%;
  height: 400rpx;
  background: #030303;
  position: relative;
}

.videoPlay {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  top: 50%;
  left: 50%;
  margin: -30rpx 0 0 -30rpx;
}

.bottomline {
  border-bottom: 2rpx solid #ddd;
}

.set {
  position: fixed;
  background: rgba(0, 0, 0, 0.1);
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  z-index: 13
}

.set .biaoti {
  height: 60rpx;
  color: #030303;
  line-height: 60rpx;
  text-align: center;
  margin-top: 40rpx;
}

.set .popup_nr {
  position: absolute;
  top: 30%;
  width: 540rpx;
  background: #fff;
  left: 15%;
  text-align: center;
  box-shadow: 0rpx 8rpx 40rpx 0rpx rgba(0, 0, 0, 0.1);
  border-radius: 24rpx;
}

.set .popup_nrs {
  font-size: 28rpx;
  color: #9B9B9B;
  margin: 32rpx 50rpx 20rpx;
}

.set .an {
  border-top: 1rpx solid #ccc;
}

.set .an button {
  padding-top: 10rpx;
  font-weight: bold;
  padding-bottom: 10rpx;
  background: none;
  color: #FD93B3;
  font-size: 34rpx;
}

.set .an button::after {
  border: none;
  background-color: rgba(0, 0, 0, 0);
}

.service_an {
  position: fixed;
  top: auto;
  left: auto;
  right: 40rpx;
  bottom: 180rpx;
  width: 30rpx;
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
  background: rgba(248, 159, 181, 0.8);
  color: #fff;
  text-align: center;
  z-index: 10
}


/* 弹窗 */
.notes {
  position: fixed;
  background: rgba(0, 0, 0, 0.7);
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  z-index: 10;
}

.notes .cont {
  background: #fff;
  width: 620rpx;
  margin: 0 auto;
  border-radius: 16rpx;
  margin-top: 50%;
  overflow: hidden;
}

.notes .cont .head {
  background: #FAA4AD;
  color: #fff;
  padding: 20rpx;
}

.notes .cont .body {
  padding: 30rpx;
  /* height: 800rpx; */
  overflow-y: scroll;
}