/**index.wxss**/
.ps_ds {
  padding: 20rpx;
  background: #fff;
}

.ps_ds .title {
  font-weight: bold;
  font-size: 36rpx;
  padding-left: 0;
}



.search_box {
  padding: 20rpx 40rpx;
}

.search_box image {
  width: 40rpx;
  height: 40rpx
}

.search_box .search {
  width: 560rpx;
  background: #EEEEEE;
  border-radius: 6rpx;
  padding: 10rpx;
}

.search_box .shop {
  position: relative
}

.search_box .point {
  position: absolute;
  top: -20rpx;
  right: -18rpx;
  width: 34rpx;
  height: 34rpx;
  background: #FA9DB4;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  font-size: 24rpx;
}

.nav {
  padding: 20rpx 10rpx;
  text-align: center;
}

.nav image {
  width: 80rpx;
  height: 80rpx;
  display: block;
  margin: 0 auto;
}

.title {
  padding: 30rpx 20rpx;
}

.title .bold {
  font-weight: bold;
  font-size: 36rpx;
}

.title .notice {
  width: 480rpx;
  height: 40rpx;
  overflow: hidden;
  position: relative;
  margin-left: 20rpx;
  top: 10rpx;
}

.title .notice .fonts {
  white-space: nowrap;
  position: absolute;
  top: 0;
}

.title .notice .fonts view {
  display: inline-block;
}

.carouse,
.carouse2 {
  overflow: hidden;
}

.carouse swiper,
.carouse2 swiper {
  height: 490rpx;
}

.carouse .box {
  width: 96%;
  height: 300rpx;
  display: inline-block;
}

.carouse .box image,
.carouse2 image {
  border-radius: 12rpx;
}

.carouse2 {
  padding: 20rpx;
}

.carouse2 .item {
  overflow: hidden;
  border-radius: 12rpx;
  width: 100%;
  height: 100%;
}

.video_box {
  width: 100%;
}

.video_box .vlist {
  height: 400rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  position: relative;
}

/* 视频 */
.video {
  width: 100%;
  height: 400rpx;
  margin-top: 20rpx;
}

.videoVideo2 {
  width: 100%;
  height: 400rpx;
  position: absolute;
  bottom: 0;
  z-index: 99;
}

.videoPlay {
  position: absolute;
  width: 80rpx;

  height: 80rpx;
  top: 50%;
  left: 50%;
  margin: -30rpx 0 0 -30rpx;
  z-index: 100;
}


.hot_topic {
  margin: 20rpx;
}

.hot_topic .item {
  width: 350rpx;
  background: #fff;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.hot_topic .item .imgb {
  width: 100%;
  height: 220rpx;
  overflow: hidden;
  border-radius: 8rpx;
}

.hot_topic .item .txt {
  font-size: 24rpx;
  color: #fff;
  padding: 20rpx;
  text-align: center;
  margin-top: 15rpx;
}

.hot_topic .item .txt view {
  background: #999;
  width: 50%;
  line-height: 42rpx;
}

.hot_topic .item .txt view:last-child {
  background: #FAABBE;
}

.experiencer {
  margin: 20rpx;
}

.experiencer .img1 {
  border-radius: 8rpx;
  box-shadow: 0px 10rpx 30rpx -5rpx rgba(0, 0, 0, 0.3);
  margin-bottom: 20rpx;
}

.experiencer .item {
  width: 346rpx;
  background: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0px 10rpx 30rpx -5rpx rgba(0, 0, 0, 0.3);
}

.experiencer .item .imgb {
  width: 100%;
  height: 200rpx;
  overflow: hidden;
}

.experiencer .item .txt {
  padding: 20rpx 10rpx;
  font-size: 24rpx;
  position: relative
}

.experiencer .item .txt text:first-child {
  font-weight: bold;
}

.experiencer .item .icon {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 10rpx;
  top: 16rpx;
}

.star .experiencer .item {
  width: 100%;
}

.star .experiencer .item .imgb {
  height: 360rpx;
}

.week {
  margin: 20rpx;
}

.week .item {
  width: 346rpx;
  background: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0px 10rpx 30rpx -5rpx rgba(0, 0, 0, 0.3);
}

.week .item .imgb {
  width: 100%;
  height: 400rpx;
  overflow: hidden;
}

.week .item .txt {
  padding: 20rpx 10rpx;
}

.week .item .txt image {
  width: 85%;
}

.store_box {
  overflow: hidden;
}

.store {
  width: 100%;
  overflow: hidden;
  padding: 10rpx;
  background: #fff;
  box-sizing: border-box;
}

.store .item {
  width: 25%;
  display: inline-block;
  text-align: center;
  margin-bottom: 20rpx;
}

.store .item image {
  width: 140rpx;
  height: 140rpx;
}

.comments {
  margin: 20rpx;
}

.comments .item {
  width: 346rpx;
  background: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0px 10rpx 30rpx -5rpx rgba(0, 0, 0, 0.3);
}

.comments .item .imgb {
  width: 100%;
  height: 400rpx;
  overflow: hidden;
  position: relative;
}

.comments .item .imgb .tag {
  max-width: 260rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.4);
  font-size: 20rpx;
  position: absolute;
  bottom: 0;
  margin: 10rpx;
  padding: 2rpx 10rpx;
  border-radius: 20rpx;
}

.comments .item .txt {
  padding: 20rpx 10rpx;
  font-size: 24rpx;
}

.comments .item .txt image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.more {
  margin: 40rpx 0;
  background: #F1F1F1;
  text-align: center;
  border-radius: 8rpx;
  color: #F53219;
  line-height: 70rpx;
}

.more image {
  width: 30rpx;
  height: 30rpx;
  display: block;
}

/* .tj{padding-bottom: 100rpx;margin-top: 20rpx;} */
.product {
  margin: 20rpx;
}

.product .item {
  width: 346rpx;
  background: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0px 10rpx 30rpx -5rpx rgba(0, 0, 0, 0.3);
}

.product .item>image {
  height: 346rpx;
}

.product .item .txtBox {
  padding: 10rpx;
}

.product .item .txtBox image {
  width: 40rpx;
}

.zxBox {
  margin: 0 20rpx;
  overflow: hidden;
}

.zxBox scroll-view {
  height: 420rpx;
  white-space: nowrap;
}

.zxBox .item {
  width: 260rpx;
  height: 400rpx;
  position: relative;
  margin-right: 20rpx;
  display: inline-block;
  box-shadow: 0px 15rpx 15rpx -5rpx rgba(0, 0, 0, 0.3);
}

.zxBox .item .img {
  width: 260rpx;
  height: 400rpx;
  border-radius: 8rpx;
  display: block;
}

.zxBox .info {
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  color: #fff;
}

.zxBox .info .name {
  -webkit-writing-mode: vertical-lr;
  writing-mode: vertical-lr;
  padding: 20rpx 10rpx;
}

.zxBox .info .price {
  padding: 10rpx;
}

.zxBox .info .price view {
  background: rgba(0, 0, 0, 0.2);
  border-radius: 18rpx;
  padding: 0 5px;
  line-height: 36rpx;
}

.zxBox .info .icon {
  width: 26rpx;
}

