/* pages/index/myMovies.wxss */
.nav {width: 750rpx;background: #fff;padding-bottom: 10rpx;}
.tab {font-size: 30rpx;}
.tab view {padding-bottom: 4rpx;padding: 20rpx 0;margin: 0 20rpx;}
.tab .active {border-bottom: 2px solid #F4B6C5;color: #F4B6C5;padding-bottom: 4rpx;font-size: 30rpx;}

.title{text-align: center;margin-bottom: 30rpx;font-weight: bold;}
.title image{width: 38rpx;}
.arrow{width: 0;height: 0;margin-top: 40rpx;display: inline-block;border-left: 10rpx solid transparent;border-right: 10rpx solid transparent;border-top: 16rpx solid #ccc;}

.listbox{margin-top: 20rpx;}
.list{padding: 20rpx;overflow: hidden;background: #fff;margin-bottom: 20rpx;}
.list .vbox{position: relative;width: 100%;height: 400rpx;}
.list .down{width: 25rpx;vertical-align: middle;}
.list .btnbox .price{font-size: 60rpx;}
.list .btnbox .yj{text-decoration:line-through;color: #bbb;padding-left: 10rpx;}
.list .btnbox .btn{border-radius: 8rpx;padding: 10rpx 20rpx;background: #FD93B3;color: #fff;}
 
/* 视频 */
.video {
  width: 100%;
  height: 400rpx;
  border-radius: 8rpx;
}
.videoVideo2 {
  width: 100%;
  height: 400rpx;
  position: absolute;
  bottom: 0;
  z-index: 99;
  border-radius: 8rpx;
}
.videoPlay{
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  top:50%;
  left: 47%;
  margin: -30rpx 0 0 -30rpx;
  z-index: 100;
}

.nodata{padding: 80rpx 40rpx;}
.nodata .btn_title{margin-top: 80rpx;line-height: 80rpx;font-size: 34rpx;}

.tip_box{position: fixed;bottom: 0;left: 0;top:0;right: 0;background: rgba(0,0,0,0.3);z-index: 200}
.tip_box .body{background: #F3F3F3;width: 80%;border-radius: 16rpx;text-align: center;overflow: hidden;}
.tip_box .body .title{background: #F7CCD3;font-size: 32rpx;padding: 20rpx;font-weight: bold;}
.tip_box .body .foot .cancel{width:200rpx;line-height: 70rpx;border-radius: 10rpx;font-size: 32rpx;background: #fff;}
.tip_box .body .foot .ok{width:200rpx;line-height: 70rpx;border-radius: 10rpx;font-size: 32rpx;background: #FAA8B6;color:#fff;}

.set{position:fixed;background:rgba(0,0,0,0.1);top:0;right:0;left:0;bottom:0;z-index: 300}
.set .biaoti{height:60rpx;color:#030303;line-height:60rpx;text-align:center;margin-top:40rpx;}
.set .popup_nr{position:absolute;top:30%;width:540rpx;background:#fff;left:15%;text-align:center;box-shadow:0rpx 8rpx 40rpx 0rpx rgba(0,0,0,0.1);border-radius:24rpx;}
.set .popup_nrs{font-size:28rpx;color:#9B9B9B;margin:32rpx 50rpx 20rpx;}
.set .an{border-top:1rpx  solid #ccc;}
.set .an button{padding-top:10rpx;font-weight:bold;padding-bottom:10rpx;background:none;color:#FD93B3;font-size:34rpx;}
.set .an button::after{border: none;background-color:rgba(0,0,0,0);}