.w20{width: 20%}

.w_200{width: 400rpx}

/**高度**/
.h100{height: 100%}

.h_15{height: 30rpx}
.h_30{height: 60rpx}
.h_360{height: 720rpx}

/**行高**/
.lh_30{line-height: 60rpx;}

/**外边距**/
.mg_auto{margin: auto}
.mt_5{margin-top:10rpx;}
.mt_10{margin-top: 20rpx;}
.mt_20{margin-top: 40rpx;}

/**内边距**/
.pt_5{padding-top: 10rpx;}
.pt_10{padding-top: 20rpx;}
.pt_20{padding-top: 40rpx;}

.pr_5{padding-right: 10rpx;}
.pr_10{padding-right: 20rpx;}
.pr_20{padding-right: 40rpx;}

.pl_5{padding-left: 10rpx;}
.pl_10{padding-left: 20rpx;}
.pl_20{padding-left: 40rpx;}

.pb_5{padding-bottom: 10rpx;}
.pb_10{padding-bottom: 20rpx;}
.pb_20{padding-bottom: 40rpx;}

/**对齐方式**/
.ta_c{text-align: center;}
.ta_l{text-align: left;}
.ta_r{text-align: right;}

/**flex**/
.df{display:flex}
.fd_r{flex-direction:row}
.fd_rr{flex-direction:row-reverse}
.fd_c{flex-direction:column}
.fd_cr{flex-direction:column-reverse}
.fw_n{flex-wrap:nowrap}
.fw_w{flex-wrap:wrap}
.fw_wr{flex-wrap:wrap-reverse}
.jc_fs{justify-content:flex-start}
.jc_fe{justify-content:flex-end}
.jc_c{justify-content:center}
.jc_sb{justify-content:space-between}
.jc_sa{justify-content:space-around}
.ai_s{align-items:stretch}
.ai_fs{align-items:flex-start}
.ai_fe{align-items:flex-end}
.ai_c{align-items:center}
.ai_b{align-items:baseline}
.ac_s{align-content:stretch}
.ac_fs{align-content:flex-start}
.ac_fe{align-content:flex-end}
.ac_c{align-content:center}
.ac_sb{align-content:space-between}
.ac_sa{align-content:space-around}

/**文字超出显示**/
.oneline{overflow: hidden;white-space: nowrap;text-overflow: ellipsis;}
.twoline{
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    white-space: normal;
}

