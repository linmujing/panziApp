.btn_title{
  border-radius: 40rpx;
  padding: 5rpx 20rpx;
  background: #FD93B3;
  color: #fff;
}
.color_title{color: #FD93B3}
.bg_title{background: #FD93B3}
/**字体大小**/
.ft_10{font-size: 20rpx;}
.ft_12{font-size: 24rpx;}
.ft_13{font-size: 26rpx;}
.ft_14{font-size: 28rpx;}
.ft_15{font-size: 30rpx;}
.ft_16{font-size: 32rpx;}
.ft_17{font-size: 34rpx;}

/**字体颜色**/
.color_ff{color: #fff}

/**背景色**/
.bg_ff{background: #fff}

/**宽度**/
.w100{width: 100%}
.w90{width: 90%}
.w80{width: 80%}
.w70{width: 70%}
.w60{width: 60%}
.w50{width: 50%}
.w40{width: 40%}
